<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ioanoanea.gicestevietateaclona.activities.MenuActivity"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/close_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Close menu"
        android:textColor="@color/colorText"
        android:textAlignment="center"
        android:textSize="20sp"
        android:fontFamily="sans-serif-medium"
        android:padding="14dp"
        android:background="@drawable/hover_background"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="38dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/get_coins"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Coins"
        android:textColor="@color/colorText"
        android:textAlignment="center"
        android:textSize="26sp"
        android:fontFamily="sans-serif-medium"
        android:padding="20dp"
        android:background="@drawable/hover_background"
        android:layout_marginTop="64dp"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="38dp"/>

    <TextView
        android:id="@+id/sound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sounds On"
        android:textColor="@color/colorText"
        android:textAlignment="center"
        android:textSize="26sp"
        android:fontFamily="sans-serif-medium"
        android:padding="20dp"
        android:background="@drawable/hover_background"
        android:layout_marginTop="0dp"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="38dp"/>

    <TextView
        android:id="@+id/share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share"
        android:textColor="@color/colorText"
        android:textAlignment="center"
        android:textSize="26sp"
        android:fontFamily="sans-serif-medium"
        android:padding="20dp"
        android:background="@drawable/hover_background"
        android:layout_marginTop="0dp"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="38dp"/>


</LinearLayout>